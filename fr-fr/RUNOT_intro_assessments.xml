<?xml version="1.0" encoding="UTF-8" ?>
<project name="RUN-OT" default="runot" basedir=".">

  <!-- dita.dir should point to the toolkit's root directory (you shouldn't have to modify this). -->
  <property name="dita.dir" value="${basedir}"/>
    
  <import file="${dita.dir}${file.separator}integrator.xml"/>

  <target name="runot" depends="integrate">
    
    <!-- Replace nnnnn with the course number from the course URL. -->
    <property name="course.num" value="141"/>
    
    <ant antfile="${dita.dir}${file.separator}build.xml" target="init">
      <!-- The file path must be the absolute file path to your lessons ditamap. -->
      <property name="args.input"
        value="/Users/marine/Documents/GitHub/LearningDITA/fr-fr/course01-basic_dita.ditamap"/>
      
      <property name="output.dir"
        value="/Users/marine/Documents/GitHub/LearningDITA/Output/out/intro/assessments"/>
      
      <!-- You shouldn't need to modify the rest of these properies. -->
      <property name="transtype" value="assessment"/>
      <property name="include.rellinks" value="sibling"/>
      
    	 <property name="clean.temp" value="yes"/>
       <property name="generate.copy.outer" value="1"/> 
      <property name="maxJavaMemory" value="1500M"/>
      
      

    </ant>
  </target>
</project>
