        <lcObjectives>
            <lcObjectivesGroup id="lcObjectivesGroup_tvl_vbh_1t">
                <lcObjective>Différencier un topic de type entrée de glossaire d'un topic de type
                    groupe de glossaire</lcObjective>
                <lcObjective>Comprendre la structure de base d'un topic de type entrée de
                    glossaire</lcObjective>
